<!-- login時ページ -->
<div class="text-center">
  <h1>Log in</h1>
</div>

<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <!-- モデルがないフォームをform_withで作成する際はmodel:ではなくurl:を使用。-->
    <!-- ここではurl:login_pathとすればOK。またscope: :session を追記することで、-->
    <!-- 全てのフォームデータが :sessionの中に入る-->
    <!-- sessionとは登録したデータにid番号（印）をつけておくログイン管理方法 -->
    <!-- cookie（ブラウザにデータ保存する仕組み）を利用してデータ保存をしておく -->
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
  
      <div class="form-group">
        <!--:emailは対象カラムを指定、"Email"はブラウザ表示名-->
        <!-- f.labelはただの項目名 -->
        <%= f.label :email, "Email" %>
        <!-- f.text.fieldは入力した文字が:emailのカラムに入る -->
        <%= f.email_field :email, class: "form-control" %>
      </div>
      
      <div class="form-group">
        <%= f.label :password, "password" %>
        <%= f.password_field :password, class: "form-control" %>
      </div>
    
      <%= f.submit "Log in", class: "btn btn-primary btn-block" %>
    <% end %>
    <!--新規登録用のコード,"Sign up now!"は表示名, signup_pathは生成されたURLでusers#newへリンク-->
    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>
<ul class="list-unstyled">
  <% favorite_microposts.each do |favorite_micropost| %>
    <li class="media mb-3">
      <img class="mr-2 rounded" src="<%= gravatar_url(favorite_micropost.user, { size: 50 }) %>" alt="">    
      <div class="media-body">
        <div>
          <%= link_to favorite_micropost.user.name, user_path(favorite_micropost.user) %> <span class="text-muted">posted at <%= favorite_micropost.created_at %></span>
        </div>
        <div>
          <p class="mb-0"><%= favorite_micropost.content %></p>
        </div>
        <div class="row">

          <div class="ml-2">
          <!-- favorite button -->
          <%= render "favorites/likes_button", micropost: favorite_micropost %>
          </div>
          
          <div class="ml-2">
            <!-- delete button -->
          <% if current_user == favorite_micropost.user %>
            <%= link_to "delete", favorite_micropost,method: :delete, data: { confirm: "You sure?" }, class: "btn btn-danger btn-sm" %>
          <% end %>
          </div>
          
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate favorite_microposts %>
</ul>